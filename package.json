{
  "name": "express-starter",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/bin/www.js",
    "test": "jest",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "debug": "npm run build && npm run watch-debug",
    "build-ts": "tsc",
    "build-sass": "node-sass public/css/main.scss dist/public/css/main.css",
    "watch-node": "nodemon ./dist/bin/www.js",
    "watch-ts": "tsc -w",
    "watch-sass": "node-sass -w public/css/main.scss dist/public/css/main.css",
    "serve-debug": "nodemon --inspect dist/bin/www.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node bin/copyStaticAssets.ts",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/jest": "^23.3.7",
    "@types/lodash": "^4.14.117",
    "@types/lusca": "^1.5.0",
    "@types/morgan": "^1.7.35",
    "@types/serve-favicon": "^2.2.30",
    "@types/supertest": "^2.0.6",
    "body-parser": "~1.18.3",
    "compression": "^1.7.3",
    "concurrently": "^4.0.1",
    "cookie-parser": "~1.4.3",
    "debug": "~4.1.0",
    "dotenv": "^6.1.0",
    "exphbs": "^1.2.0",
    "express": "~4.16.4",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "lodash": "^4.17.11",
    "lusca": "^1.6.1",
    "morgan": "~1.9.1",
    "node-sass": "^4.9.4",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "serve-favicon": "~2.5.0",
    "shelljs": "^0.8.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.35",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.6",
    "@types/jest": "^22.1.1",
    "@types/lodash": "^4.14.100",
    "@types/lusca": "^1.5.0",
    "@types/morgan": "^1.7.35",
    "@types/serve-favicon": "^2.2.30",
    "@types/supertest": "^2.0.4",
    "concurrently": "^3.5.1",
    "jest": "^22.1.4",
    "lint-staged": "^6.1.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.12",
    "prettier": "^1.10.2",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.3",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.7.0",
    "typescript": "^2.7.1"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/config/jest/setupTests.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
